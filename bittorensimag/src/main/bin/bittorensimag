#!/bin/sh

CLIENT_HOME=$(cd "$(dirname "$0")"/../../../ && pwd)
CP_FILE="$CLIENT_HOME"/target/generated-sources/classpath.txt

CP="$CLIENT_HOME"/target/generated-classes/cobertura:"$CLIENT_HOME"/target/classes/:$(cat "$CP_FILE")

# May be useful for debugging: show which decac commands are called in a temporary file
#echo "$0" "$@" >> /tmp/decac.txt

exec java -enableassertions -cp "$CP" bittorensimag.ClientMain "$@"

